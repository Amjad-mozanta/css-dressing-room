script#style-dialog-template(type='text/template-html')
	.dialog.style-picker
		.pickers.js-pickers
		.bottom-buttons
			button.save.js-save
				i.fa.fa-check
				|  Save
		i.fa.fa-close.button.close.js-cancel


script#picker(type='template/html')
	.picker
		h2.js-title
		//- form makes the radio inputs below it behave as one set, even if there are others with the same name.
		form
			ul.items.js-items


