		script#site-template(type='text/template-hogan')
			.site
				.background
					h2 {{ headline }}
					| {{# byline }}
					p.byline.vcard
						| By 
						a.author.fn(href='{{ url }}') {{ name }}
						span.publish-date
							|  on 
							time.updated(datetime='2012-08-06 15:45:07+0000', pubdate='') August 6, 2012 11:45 am
					| {{/ byline }}
					p.lead {{ lead }}
					p {{ body1 }}
					blockquote {{ block-quote }}
					p {{ body2 }}
		script#site-delete-button-template(type='text/template-hogan')
			span.delete-button.icon-stack.icon-2x
				i.icon-circle.icon-light
				i.icon-remove-sign
