<li>
	<h2>{{ headline }}</h2>
	{{# byline }}
		<p class="byline vcard">
			By <a href="{{ url }}" class="author fn">{{ name }}</a>
			<span class="publish-date">on <time class="updated" datetime="2012-08-06 15:45:07+0000" pubdate="">August   6, 2012 11:45 am</time></span>
		</p>
	{{/ byline }}
  	<p class="lead">{{ lead }}</p>
	<p>{{ body1 }}</p>
	<blockquote>{{ block-quote }}</blockquote>
	<p>{{ body2 }}</p>
</li>